<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/icon_user_chat"
        android:layout_margin="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Имя пользователя"
        android:layout_above="@+id/last_message_chat"
        android:layout_alignLeft="@+id/last_message_chat"
        android:layout_alignStart="@+id/last_message_chat"
        android:id="@+id/user_name_chat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Последнее сообщение"
        android:layout_alignBottom="@+id/icon_user_chat"
        android:layout_toRightOf="@+id/icon_user_chat"
        android:layout_toEndOf="@+id/icon_user_chat"
        android:layout_marginBottom="8dp"
        android:id="@+id/last_message_chat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11:00"
        android:layout_above="@+id/last_message_chat"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/time_message_chat"
        android:layout_marginRight="16dp" />

</RelativeLayout>